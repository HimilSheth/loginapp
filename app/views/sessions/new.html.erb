<h1>Log In</h1>

<%= form_for(:session, url: login_path) do |f| %>
<p>
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
<p class="button"><%= f.submit %></p>
  <p>New user? <%= link_to "Sign up now!", signup_path %></p>

<% end %>
